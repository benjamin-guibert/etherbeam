{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/server",
      "program": "${workspaceRoot}/packages/server/bin/rails",
      "args": ["server"]
    },
    {
      "name": "Server - Test",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/server",
      "program": "${workspaceRoot}/packages/server/bin/bundle",
      "args": ["exec", "rspec", "-I", "${workspaceRoot}"]
    },
    {
      "name": "Server - Test (file)",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/server",
      "program": "${workspaceRoot}/packages/server/bin/bundle",
      "args": ["exec", "rspec", "-I", "${file}"]
    },
    {
      "name": "Server - Test (line)",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/server",
      "program": "${workspaceRoot}/packages/server/bin/bundle",
      "args": ["exec", "rspec", "-I", "${file}:${lineNumber}"]
    }
  ]
}
